// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // Cambia a "mysql" si usas MySQL
  url      = env("DATABASE_URL")
}

// TABLA DE ÍTEMS DE INVENTARIO
model InventoryItem {
  id            String   @id @default(cuid())  // ID único
  name          String                         // Nombre del ítem
  description   String?                        // Descripción (opcional)
  type          String                         // Tipo: INGREDIENT o PACKAGING
  currentStock  Int                            // Stock actual
  minStockAlert Int                            // Stock mínimo para alerta
  unit          String                         // Unidad: kg, litros, unidades
  createdAt     DateTime @default(now())       // Fecha creación
  updatedAt     DateTime @updatedAt            // Fecha actualización
}